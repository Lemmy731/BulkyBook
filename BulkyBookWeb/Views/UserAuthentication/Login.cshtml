@model BulkyBookWeb.DTO.LoginDTO
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        form{
            border : 3px solid #f1f1f1;
            width: 60%;
            margin: auto;
            margin-top: 10%;
        }
        input{
            width: 100%;
            padding: 12px, 20px;
            margin: 8px, 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
            height: 30px;
        }
        button{
            background-color: #aa048b;
            color:white;
            padding: 14px, 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
            height: 20px

        }
        .container{
            padding: 16px;
        }
        .msg{
            padding: 0px;
        }
        .err{
            color: red;
        }
    </style>
</head>
<body>
   
        <form asp-action="Login", method="post" >
            <div class="container">
                <label asp-for="UserName">UserName</label>
                <input type="text" asp-for="UserName"/>
                <div class="msg">
                    <span asp-validation-for="UserName"></span>
                </div>

                <label asp-for="PassWord">Password</label>
                <input type ="password" asp-for="PassWord"/>
                <div class="msg">
                    <span asp-validation-for="PassWord"></span>
                </div>
              

                @if(TempData["msg"] != null)
                {
                    <div class="msg">
                        @TempData["msg"]
                    </div>
                }
                <button type ="submit">Login</button>
                <a href ="/UserAuthentication/Registration">Not a user click here to register</a>

            </div>
        </form>

    
</body>
</html>
